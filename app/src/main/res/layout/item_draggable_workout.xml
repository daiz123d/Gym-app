<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2A2A2A"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/workoutImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/edittext_bg" />

        <TextView
            android:id="@+id/workoutNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bài tập"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/workoutCaloriesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="160 kcal"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/workoutDurationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 phút"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="2dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewDetailBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Xem thông tin"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:background="@drawable/orange_bg"
            android:padding="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

